{
  "tests": [
    {
      "name": "Register new user successfully",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "register",
        "username": "testuser123",
        "email": "test@example.com",
        "password": "password123"
      },
      "expectedStatus": 201,
      "expectedBody": {
        "user": {
          "username": "string",
          "email": "string"
        },
        "session_token": "string",
        "message": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Register with missing fields returns error",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "register",
        "username": "",
        "email": "test@example.com",
        "password": "password123"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}
